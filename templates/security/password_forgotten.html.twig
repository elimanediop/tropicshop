{% extends 'base.html.twig' %}

        {% block title %}{{ app_name }}{% endblock %}

        {% block body %}
        <!-- Page Content -->
        <!-- ##### Breadcrumb Area Start ##### -->
<section class="breadcrumb-area bg-img bg-overlay" style="background-image: url({{ asset('img/slider2.jpg') }});">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2>Login</h2>
                </div>
            </div>
        </div>
    </div>
</section>
        <!-- ##### Breadcrumb Area End ##### -->


        <!-- ##### Login Area Start ##### -->
<div class="mag-login-area py-5 h-100">
<div class="container h-100">
    <div class="row h-100 justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="login-content bg-white p-30 box-shadow">
                <!-- Section Title -->
                <div class="section-heading">
                    <h5>Mot de passe oublié</h5>
                </div>
                {% if(error is defined) %}
                <div class="">
                    <p class="text-danger">
                        {{ error }}
                    </p>
                </div>
                {% endif %}

                <form action="{{ path('security_passwordForgotten') }}" method="post">
                    <div class="form-group">
                        <input type="email" name="_username" id="inputEmail" class="form-control"
                               placeholder="Mail">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn mag-btn mt-30">Envoyé</button>
                        <a href="{{ path('security_registration') }}" class="post-title">
                            <button type="button" class="btn mag-btn mt-30">Inscription</button>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
        <!-- ##### Login Area End ##### -->
{% endblock %}
