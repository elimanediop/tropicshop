{% extends 'base.html.twig' %}

{% block body %}

    <!-- ##### Breadcrumb Area Start ##### -->
    <section class="breadcrumb-area bg-img bg-overlay" style="background-image: url({{ asset('img/slider5.jpg') }});">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2></h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcrumb Area End ##### -->

    <!-- ##### Login Area Start ##### -->
    <div class="mag-login-area py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">

                    <div class="login-content bg-white p-30 box-shadow">
                        <!-- Section Title -->
                        <div class="section-heading">
                            <h5>Renseignez-le formulaire!</h5>
                        </div>
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {{ form_errors(form) }}
                        {{ form_start(form) }}
                        <div class="form-row">

                            <div class="form-group col-md-6">
                                {{ form_widget(form.nom, {'attr': {
                                    'placeholder':'nom',
                                    'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-row">

                            <div class="form-group col-md-12">
                                {{ form_widget(form.email, {'attr': {
                                    'placeholder':'Mail',
                                    'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-row">

                            <div class="form-group col-md-12">
                                {{ form_widget(form.message, {'attr': {
                                    'placeholder':'Mail',
                                    'class':'form-control'}}) }}
                            </div>
                        </div>

                        <button type="submit" class="btn mag-btn mt-30">Valider</button>
                        <a href="{{ path('home') }}" class="post-title">
                            <button type="button" class="btn mag-btn mt-30">Retour</button>
                        </a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- ##### Login Area End ##### -->
{% endblock %}
