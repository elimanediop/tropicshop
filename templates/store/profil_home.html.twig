                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="{{ asset('img/slider4.jpg') }}" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="{{ asset('img/slider5.jpg') }}" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                {% if(form is defined) %}
                    <div class="row">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                         <button type="submit" class="btn mag-btn mt-30">Valider</button>
                        {{ form_end(form) }}
                    </div>
                {% endif %}

                {% if(products is defined and products|length) %}
                    <div class="row">
                        {% for product in products %}
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100">
                                    <a href="#"><img class="card-img-top" src="{{ asset('img/'~product.images.0) }}" alt=""></a>
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="#">{{ product.nom }}</a>
                                        </h4>
                                        <h5  style="color:#f5bd4c;">{{ product.prix }}</h5>
                                        <p class="card-text">{{ product.description }}</p>
                                    </div>
                                </div>
                             </div>
                        {% endfor %}
                    </div>
                {% endif %}
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
