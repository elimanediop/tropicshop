{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="section-heading my-4">
                    <h5>Gestion de produit</h5>
                </div>
                <div class="list-group">
                    <a href="{{ path('store_profil_add_product') }}" class="list-group-item">Ajouter un produit</a>
                    <a href="{{ path('store_profil_edit_product') }}" class="list-group-item">Modifier un produit</a>
                    <a href="{{ path('store_profil_delete_product') }}" class="list-group-item">Supprimer un produit</a>
                </div>
                <div class="section-heading my-4">
                    <h5>Espace magasin</h5>
                </div>
                <div class="list-group">
                    <a href="{{ path('security_passwordForgotten') }}" class="list-group-item">Changer votre mot de passe</a>
                    <a href="{{ path('security_changeMail') }}" class="list-group-item">Modifier votre adresse mail</a>
                    <a href="{{ path('security_changeAddress') }}" class="list-group-item">Modifier votre adresse</a>
                    <a href="{{ path('security_deleteAccount') }}" class="list-group-item">Supprimer votre compte</a>
                </div>
                <div class="post-meta">
                    <a href="https://instagram.com/saveurs_afrique?=nametag" class="post-title" target="_blank">Plus de détails...</a>
                </div>
                <!-- Sidebar Widget -->
                <div class="single-sidebar-widget  my-4">
                    <a href="#" class="add-img" target="_blank"><img src="{{ asset('img/bg-img/51.jpg') }}" alt=""></a>
                </div>
                <!-- Sidebar Widget -->
                <div class="single-sidebar-widget  my-4">
                    <a href="#" class="add-img" target="_blank"><img src="{{ asset('img/bg-img/72.jpg') }}" alt=""></a>
                </div>
                <!-- Sidebar Widget -->
                <div class="single-sidebar-widget  my-4">
                    <a href="#" class="add-img" target="_blank"><img src="{{ asset('img/bg-img/71.jpg') }}" alt=""></a>
                </div>

            </div>
            <!-- /.col-lg-3 -->


            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="{{ asset('img/bg-img/slider1.jpg') }}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="{{ asset('img/bg-img/slider2.jpg') }}" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="{{ asset('img/bg-img/slider3.jpg') }}" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="{{ asset('img/bg-img/slider4.jpg') }}" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="{{ asset('img/bg-img/slider5.jpg') }}" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                {% if(form is defined) %}
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-8">
                            <div class="login-content bg-white p-30 box-shadow">
                                <div class="section-heading">
                                    <h5>Éditer d'un produit</h5>
                                </div>
                                {% if (error ) %}
                                    <div class="p-1 border border-danger">
                                        <i class="fa fa-info-circle fa-2x"></i>
                                        <p class="text-danger d-inline-block">{{ error }}</p>
                                    </div>
                                {% endif %}
                                <div class="">
                                    <ul class="text-danger">
                                        <li>{{ form_errors(form) }}</li>
                                    </ul>
                                </div>

                                {{ form_start(form) }}
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        {{ form_widget(form.produit.nom , {'attr': {
                                            'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group col-md-12">
                                        {{ form_label(form.prix, 'Prix en Euro (€)') }}
                                        {{ form_widget(form.prix, {'attr': {
                                            'class':'form-control'}}) }}

                                    </div>

                                    <div class="form-group col-md-3">
                                        {{ form_label(form.mesure, 'Mesure') }}
                                        {{ form_widget(form.mesure, {'attr': {
                                            'class':'form-control'}}) }}
                                    </div>

                                    <div class="form-group col-md-9">
                                        {{ form_label(form.typevente, 'Type de Vente') }}
                                        {{ form_widget(form.typevente, {'attr': {
                                            'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group col-md-12">
                                        {{ form_label(form.origine, 'Origine du produit (pays, région continentale)') }}
                                        {{ form_widget(form.origine.country, {'attr': {
                                            'class':'form-control'}}) }}
                                    </div>
                                </div>                                 <button type="submit" class="btn mag-btn mt-30">Valider</button>
                                    <a href="{{ path('store_profil') }}" class="post-title">
                                        <button type="button" class="btn back-btn btn-warning mt-30">Retour</button>
                                    </a>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                {% if(products is defined and products|length) %}
                    <div class="row">
                        {% for product in products %}
                            <div class="col-lg-4 col-md-6 mb-4">

                                    <div class="card h-100">
                                        <a href="{{ path('store_profil_edit_product', {'id' : product.id}) }}">
                                            {% set img = '8.jpg' %}
                                            {% if product.produit.images|length %}
                                                {% set img = product.produit.images.0 %}
                                            {% endif %}
                                            <img class="card-img-top" src="{{ asset('img/'~img) }}" alt="">
                                        </a>
                                        <div class="card-body">
                                            <h4 class="color-theme">{{ product.prix|number_format(2) }} €</h4>
                                            <h4 class="card-title">
                                                <a href="{{ path('store_profil_edit_product', {'id' : product.id}) }}">{{ product.produit.nom }}</a>
                                            </h4>
                                            <h6 style="color:#f5bd4c;">{{ product.typevente }}</h6>
                                            <p class="card-text">{{ product.produit.description }}</p>
                                        </div>
                                    </div>
                                </a>
                             </div>
                        {% endfor %}
                    </div>
                {% endif %}
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->


{% endblock %}
